<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/signup">


    <com.intrix.social.common.view.SEditText
        android:id="@+id/email_id"
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:theme="@style/SignUpEditText"
        style="@style/SignUpEditText"/>

    <com.intrix.social.common.view.SEditText
        android:id="@+id/password"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@id/email_id"
        android:hint="@string/hint_password"
        android:theme="@style/SignUpEditText"
        style="@style/SignUpEditText"/>

    <com.intrix.social.common.view.STextView
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email_id"
        android:layout_centerHorizontal="true"
        android:text="@string/sign_in"
        android:textSize="22sp"
        android:gravity="bottom"
        android:padding="12dp"
        android:layout_marginBottom="20dp"
        android:textAllCaps="true"
        android:textColor="@android:color/white" />

    <ImageView
        android:src="@drawable/logo"
        android:layout_above="@id/sign_up"
        android:layout_centerHorizontal="true"
        android:layout_width="272dp"
        android:paddingLeft="22dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_height="wrap_content"/>

    <com.intrix.social.common.view.SBtnView
        android:id="@+id/new_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sign_in_btn"
        android:layout_centerHorizontal="true"
        android:text="@string/new_account"
        android:textSize="12sp"
        android:gravity="bottom"
        android:padding="12dp"
        android:layout_marginBottom="10dp"
        android:textAllCaps="true"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white" />

    <com.intrix.social.common.view.SBtnView
        android:id="@+id/sign_in_btn"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        style="?borderlessButtonStyle"
        android:background="@drawable/google_button"
        android:text="@string/sign_in"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>