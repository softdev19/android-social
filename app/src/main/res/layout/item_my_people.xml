<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="@dimen/list_item_min_height">

    <View
        android:id="@+id/v_divider_item_my_people"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:background="@color/divice_item_my_people" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar_item_my_people"
        android:layout_width="@dimen/avatar_list_size"
        android:layout_height="@dimen/avatar_list_size"
        android:layout_marginLeft="@dimen/content_padding_normal"
        android:layout_marginStart="@dimen/content_padding_normal"
        android:layout_marginTop="@dimen/content_padding_normal"
        android:layout_toRightOf="@id/v_divider_item_my_people"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/content_padding_normal"
        android:layout_marginLeft="@dimen/content_padding_normal"
        android:layout_marginRight="@dimen/content_padding_normal"
        android:layout_marginStart="@dimen/content_padding_normal"
        android:layout_toRightOf="@id/iv_avatar_item_my_people"
        android:orientation="vertical"
        android:paddingBottom="@dimen/content_padding_normal"
        android:paddingTop="@dimen/content_padding_normal">

        <TextView
            android:id="@+id/tv_title_item_my_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tom Hanks"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_second_title_item_my_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#UX Designer"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/text_secondary" />
    </LinearLayout>
</RelativeLayout>