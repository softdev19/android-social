<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/wood_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_top_reduced"
        android:scaleType="centerCrop"
        android:src="@drawable/wood"/>

    <ExpandableListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1e0f04"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <com.intrix.social.common.view.STextView
            android:id="@+id/items_added"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="@string/items_added"
            android:textColor="@android:color/white"
            android:textSize="20dp"/>

        <LinearLayout
            android:id="@+id/confirm"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.intrix.social.common.view.STextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Confirm"
                android:textColor="@android:color/white"
                android:textSize="20dp"/>

            <ImageView
                android:id="@+id/confirm_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_send_white_24dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>