<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="70dp"
    android:layout_height="72dp"
    android:background="@color/s_orange"
    android:paddingBottom="2dp"
    android:paddingTop="2dp"
    android:tag="dot">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">

        <Space
            android:id="@+id/left_space"
            android:layout_width="35dp"
            android:visibility="gone"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/left_connection"
            android:layout_width="35dp"
            android:layout_height="1dp"
            android:background="@android:color/white"/>

        <Space
            android:id="@+id/right_space"
            android:layout_width="35dp"
            android:visibility="gone"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/right_connection"
            android:layout_width="35dp"
            android:layout_height="1dp"
            android:background="@android:color/white"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_oval"/>


    <LinearLayout
        android:id="@+id/expanded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/grey_oval">

            <FrameLayout
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/white_oval">

                <com.intrix.social.common.view.STextView
                    android:id="@+id/inner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="8+"
                    android:textColor="@color/s_orange"/>
            </FrameLayout>
        </FrameLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="4dp"/>

        <com.intrix.social.common.view.STextView
            android:id="@+id/outer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Testing"
            android:textColor="@android:color/white"/>
    </LinearLayout>


</FrameLayout>