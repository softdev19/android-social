<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/wall_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_top_height"
            android:scaleType="centerCrop"
            tools:src="@drawable/wall"/>

        <com.intrix.social.common.view.STextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/table_no"
            android:text="TableNo: 12"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

        <com.intrix.social.common.view.STextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:text="Order id: 124124"
            android:id="@+id/order_id"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>
    </FrameLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>

    <com.intrix.social.common.view.STextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:textColor="@color/s_orange"
        android:text="@string/experience_question"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/feedback_good"
                android:padding="12dp"
                android:src="@drawable/feedback_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.intrix.social.common.view.STextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@color/s_orange"
                android:textSize="16sp"
                android:text="@string/awesome"/>
        </LinearLayout>

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/feedback_ok"
                android:src="@drawable/feedback_neutral"
                android:padding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.intrix.social.common.view.STextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@color/s_orange"
                android:textSize="16sp"
                android:text="@string/ok_ok"/>
        </LinearLayout>

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/feedback_bad"
                android:src="@drawable/feedback_bad"
                android:layout_width="wrap_content"
                android:padding="12dp"
                android:layout_height="wrap_content"/>

            <com.intrix.social.common.view.STextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@color/s_orange"
                android:textSize="16sp"
                android:text="@string/bad"/>
        </LinearLayout>

    </LinearLayout>
    <com.intrix.social.common.view.SBtnView
        android:id="@+id/button_comment"
        android:background="@color/s_orange"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/comment"/>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.intrix.social.common.view.SBtnView
        android:id="@+id/button_proceed"
        android:background="@color/s_orange"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/skip"/>

</LinearLayout>