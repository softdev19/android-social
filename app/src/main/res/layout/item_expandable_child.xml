<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f8f8fa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.intrix.socialwaiter.common.view.STextView
                android:id="@+id/item_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="12dp"
                android:text="Virgin mary, Eggs and Bacon, Vitamin Water, Bananas Toast, Water"/>

            <ImageView
                android:id="@+id/amount_minus"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_remove_black_24dp"
                android:tint="@color/text_primary"
                android:padding="4dp" />

            <com.intrix.socialwaiter.common.view.STextView
                android:id="@+id/item_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/text_primary"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/amount_plus"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add_black_24dp"
                android:tint="@color/text_primary"
                android:padding="4dp" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.intrix.socialwaiter.common.view.STextView
                android:id="@+id/preferences"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="@color/s_orange"
                android:text="@string/preferences"
                android:layout_height="wrap_content"/>
            <com.intrix.socialwaiter.common.view.STextView
                android:id="@+id/customize"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="@color/s_orange"
                android:text="@string/customize"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/container"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="12dp"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="12dp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/color_indicator"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="#ff8800"/>

</FrameLayout>