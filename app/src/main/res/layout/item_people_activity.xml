<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_item_min_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_avatar_people_activity"
        android:layout_width="@dimen/avatar_list_size"
        android:layout_height="@dimen/avatar_list_size"
        android:layout_marginLeft="@dimen/content_padding_normal"
        android:layout_marginStart="@dimen/content_padding_normal"
        android:layout_marginTop="@dimen/content_padding_normal"
        android:src="@drawable/arya" />

    <ImageView
        android:id="@+id/iv_action_people_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/content_padding_normal"
        android:src="@drawable/ic_user_small" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/content_padding_normal"
        android:layout_marginLeft="@dimen/content_padding_normal"
        android:layout_marginRight="@dimen/content_padding_normal"
        android:layout_marginStart="@dimen/content_padding_normal"
        android:layout_toLeftOf="@id/iv_action_people_activity"
        android:layout_toRightOf="@id/iv_avatar_people_activity"
        android:orientation="vertical"
        android:paddingBottom="@dimen/content_padding_normal"
        android:paddingTop="@dimen/content_padding_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jackob follow you"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 min ago"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/text_secondary" />
    </LinearLayout>
</RelativeLayout>